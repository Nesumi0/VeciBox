<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="265dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/popup_text"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:text="Tienda y abarrotes &quot;Elvira&quot;"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario: 08:00AM-12:00PM, 14:00PM-22:00 Lunes-Sabado"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion: Negocio con venta de abarrotes ademas de libreria y caja vecina"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operaciones: Transferencias, Depositos, Retiros, Recargas."
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/_076526" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>