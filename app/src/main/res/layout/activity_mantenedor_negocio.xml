<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D6D6"
    android:backgroundTint="#ECE5DA"
    tools:context=".Negocio.MantenedorNegocioActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="389dp"
        android:layout_height="466dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#D8CCC0"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageViewNegocio"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/baseline_remove_24" />

                <TextView
                    android:id="@+id/txt_nameN"
                    android:layout_width="373dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageViewNegocio"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="0dp"
                    android:text="Nombre del Negocio"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_DescN"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_nameN"
                    android:layout_marginTop="8dp"
                    android:text="Descripción del Negocio"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_HorariosN"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_DescN"
                    android:layout_marginTop="8dp"
                    android:text="Horarios del Negocio"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_OperacionesN"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_HorariosN"
                    android:layout_marginTop="8dp"
                    android:text="Operaciones del Negocio"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_gmailN"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_OperacionesN"
                    android:layout_marginTop="8dp"
                    android:text="Correo Electrónico"
                    android:textSize="16sp" />

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:backgroundTint="#FD9F57"
        android:text="Cerrar Sesión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.787" />

    <Button
        android:id="@+id/btn_veci"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FD9F57"
        android:text="Ir a Vecibox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FD9F57"
        android:text="Editar Datos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toEndOf="@+id/btn_veci"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a tu Negocio"
        android:textColor="#FF5722"
        android:textColorHighlight="#C51010"
        android:textColorHint="#DD0F0F"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="219dp"
        android:layout_height="63dp"
        android:backgroundTint="#FD9F57"
        android:text="Comentarios Sobre tu negocio"
        app:layout_constraintBottom_toTopOf="@+id/textView18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>