<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFD596"
    app:cardCornerRadius="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#B37E7E"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombreNS"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nombre"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/DescripcionNS"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Descripcion"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/HorarioNS"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Horario"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/OperacioneNS"
                android:layout_width="0dp"
                android:layout_height="119dp"
                android:layout_weight="1"
                android:text="Operaciones"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/fotoNS"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:src="@drawable/baseline_remove_24" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="#E89F9F"
            android:backgroundTint="#F1EEEE" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------------------------------------------------------------------------------------------------" />

        <Button
            android:id="@+id/btn_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentarios" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

